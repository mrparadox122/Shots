<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowFullscreen">true</item>



        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen" tools:ignore="DuplicateDefinition">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="ServiceTextShadow">
        <item name="android:shadowColor">#55000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10.0</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/cyan</item>
    </style>

    <style name="Progressbar_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/cyan</item>
    </style>

</resources>