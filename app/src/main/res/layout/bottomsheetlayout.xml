<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialoge_bg">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/choose"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title">

        <TextView
            android:id="@+id/reffer_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reffer &amp; Earn"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16dp"
            android:elevation="2dp"
            android:letterSpacing="0.02"
            android:layout_gravity="center"
            android:background="@drawable/dailog_text_bg"
            android:drawableTint="#FFC107"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_person_24"
           android:drawablePadding="10dp"/>


        <TextView
            android:id="@+id/wallet_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/dailog_text_bg"
            android:drawableLeft="@drawable/ic_baseline_account_balance_wallet_24"
            android:drawablePadding="10dp"
            android:drawableTint="#05850A"
            android:elevation="2dp"
            android:letterSpacing="0.02"
            android:padding="8dp"
            android:text="Wallet"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diamonds_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buy Diamonds"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16dp"
            android:letterSpacing="0.02"
            android:elevation="2dp"
            android:background="@drawable/dailog_text_bg"
            android:layout_gravity="center"
            android:drawableTint="#3862DF"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_diamond_24"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/settings_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:background="@drawable/dailog_text_bg"
            android:drawableLeft="@drawable/ic_settings"
            android:drawablePadding="10dp"
            android:drawableTint="#040404"
            android:elevation="2dp"
            android:letterSpacing="0.02"
            android:padding="8dp"
            android:text="Settings"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/language_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Language"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16dp"
            android:letterSpacing="0.02"
            android:elevation="2dp"
            android:drawableTint="#FF5722"
            android:layout_gravity="center"
            android:background="@drawable/dailog_text_bg"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_language_24"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/notification_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="16dp"
            android:letterSpacing="0.02"
            android:elevation="2dp"
            android:drawableTint="#FF9800"
            android:layout_gravity="center"
            android:background="@drawable/dailog_text_bg"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_notifications"
            android:drawablePadding="10dp"/>

        <TextView
            android:id="@+id/inbox_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Inbox"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:padding="8dp"
            android:elevation="2dp"
            android:textSize="16dp"
            android:letterSpacing="0.02"
            android:layout_gravity="center"
            android:drawableTint="#E30505"
            android:background="@drawable/dailog_text_bg"
            android:textColor="@color/white"
            android:drawableLeft="@drawable/ic_baseline_forward_to_inbox_24"
            android:drawablePadding="10dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>