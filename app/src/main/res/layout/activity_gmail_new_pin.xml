<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_65"
    android:orientation="vertical"
    tools:context=".GmailNewPin_Activity">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gmail New Pin"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:textSize="21sp"
        android:gravity="center"
        android:textColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_heading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusable="true"
            android:layout_marginTop="45dp"
            android:layout_gravity="center|top"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/et_newpin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/signuptext_bg"
                android:fontFamily="@font/calibri"
                android:hint="Enter New 4 Digits Pin "
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/et_c_newpin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/signuptext_bg"
                android:fontFamily="@font/calibri"
                android:hint="Enter Confirm New 4 Digits Pin "
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <Button
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@color/design_default_color_primary"
                android:elevation="2dp"
                android:onClick="btnDone"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_gravity="center"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>