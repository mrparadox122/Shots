<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:id="@+id/comment_screen"
    tools:context=".Profile.CommentsFragment">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_heightPercent="75%"
                    android:background="@color/black75"
                    android:layout_alignParentBottom="true"
                    android:layout_height="0dp">


                    <RelativeLayout
                        android:id="@+id/top_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/black75">

                        <ImageView
                            android:id="@+id/Goback"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="7dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_clear_black_24dp" />

                        <TextView
                            android:id="@+id/comment_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/white"
                            android:textSize="15dp" />
                    </RelativeLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recylerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/write_layout"
                        android:layout_below="@+id/top_layout"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:id="@+id/write_layout"
                        android:background="@color/black75"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp">

                        <EditText
                            android:id="@+id/message_edit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/send_btn_layout"
                            android:backgroundTint="@color/transparent"
                            android:hint="Leave a comment..."
                            android:textColor="@color/white"
                            android:textColorHint="@color/gray"
                            android:textSize="14dp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/send_btn_layout"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true">

                            <ImageView
                                android:id="@+id/send_btn"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:background="@color/transparent"
                                android:padding="4dp"
                                android:rotation="-45"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_send" />

                            <ProgressBar
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:visibility="gone"
                                android:padding="5dp"
                                android:id="@+id/send_progress"
                                style="@style/Progressbar_style"
                                />

                        </RelativeLayout>
                    </RelativeLayout>

                </RelativeLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>

</FrameLayout>