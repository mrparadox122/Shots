<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
  android:background="@color/black"
    android:keepScreenOn="true"
    android:layout_height="match_parent">

  <com.paradox.projectsp3.VideoEditorFolder.widget.PortraitFrameLayout
      android:id="@+id/wrap_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">

  </com.paradox.projectsp3.VideoEditorFolder.widget.PortraitFrameLayout>

  <LinearLayout
     android:visibility="gone"
      android:id="@+id/timerlayout"
      android:layout_width="42dp"
      android:layout_height="221dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.91"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.92">


    <android.widget.TextView
        android:id="@+id/time15s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/timer_back"
        android:text="15s"
        android:textColor="@color/black75"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.16000003" />

    <android.widget.TextView

        android:id="@+id/time30s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/timer_back"
        android:text="30s"
        android:textColor="@color/black_65"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.26999998" />


    <android.widget.TextView
        android:id="@+id/time60s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/timer_back"
        android:text="60s"
        android:textColor="@color/ic_launcher_background"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.16000003" />


  </LinearLayout>

                           <ImageView
      android:id="@+id/imageView2"
      android:layout_width="30dp"
      android:layout_height="34dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.13"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.97"
      app:srcCompat="@drawable/face"
      app:tint="#FFEB3B" />

  <ImageView
      android:id="@+id/btn_flash"
      android:layout_width="30dp"
      android:layout_height="wrap_content"

      android:src="@drawable/flash"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.01999998" />

  <ImageView
      android:id="@+id/timer"
      android:layout_width="30dp"
      android:layout_height="wrap_content"
      android:src="@drawable/timer"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.05"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.01999998" />

  <ImageView
      android:visibility=""
      android:id="@+id/btn_switch_camera"
      android:layout_width="30dp"
      android:layout_height="34dp"

      android:src="@drawable/cameraclip"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.84"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.97" />

  <ImageView
      android:id="@+id/photo_filter"
      android:layout_width="30dp"
      android:layout_height="wrap_content"


      android:src="@drawable/photo_filter"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.75"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.01999998" />


  <ImageView
      android:layout_marginTop="7dp"
      android:id="@+id/settings"
      android:layout_width="55dp"
      android:layout_height="45dp"
      android:layout_alignParentRight="true"
      android:layout_weight="0.3"
      android:padding="10dp"
      android:src="@drawable/ic_settings"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.93"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0"
      app:tint="@color/white" />

  <TextView
      android:id="@+id/button"
      android:layout_width="129dp"
      android:layout_height="33dp"
      android:layout_marginTop="16dp"
      android:drawableLeft="@drawable/music"
      android:gravity="center"
      android:text=" Add sound"
      android:textAllCaps="false"
      android:textColor="#fff"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <ImageView
      android:id="@+id/record"
      android:layout_width="67dp"
      android:layout_height="63dp"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
      android:layout_marginTop="5dp"
      android:src="@drawable/pause"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <ImageView
      android:id="@+id/pause"
      android:layout_width="67dp"
       android:visibility="gone"
      android:layout_height="63dp"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
      android:src="@drawable/recording_video"


      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <ImageView
     android:visibility="gone"
      android:id="@+id/pause_video"
      android:layout_width="30dp"
      android:layout_height="34dp"
      android:src="@drawable/pause_video"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.85"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.97"
      app:tint="#fff" />

  <ImageView
       android:visibility="gone"
      android:id="@+id/play_video"
      android:layout_width="30dp"
      android:layout_height="34dp"
      android:src="@drawable/play_video"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.84"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.97"
      app:tint="#fff" />

  <ListView
      android:visibility="gone"
      android:id="@+id/filter_list"
      android:layout_width="123dp"
      android:layout_height="match_parent"
      android:layout_marginTop="64dp"
      android:layout_marginBottom="100dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/wrap_view"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>