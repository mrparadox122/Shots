<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
  android:background="@color/black"
    android:keepScreenOn="true"
    android:layout_height="match_parent">

  <com.paradox.projectsp3.VideoEditorFolder.widget.PortraitFrameLayout
      android:id="@+id/wrap_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0">

  </com.paradox.projectsp3.VideoEditorFolder.widget.PortraitFrameLayout>

  <ImageView
      android:id="@+id/btn_switch_camera"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:src="@drawable/cameraclip"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.3"
      android:layout_marginTop="14dp"
      app:layout_constraintStart_toEndOf="@+id/addSound123"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <LinearLayout
     android:visibility="gone"
      android:id="@+id/timerlayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center"
      android:layout_marginBottom="50dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.91"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.92">


    <android.widget.TextView
        android:id="@+id/time15s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15s"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginRight="25dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.16000003" />



    <android.widget.TextView
        android:id="@+id/time30s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30s"
        android:padding="5dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginRight="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.26999998" />



    <android.widget.TextView
        android:id="@+id/time60s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="60s"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.16000003" />
  </LinearLayout>


  <ImageView
      android:id="@+id/btn_flash"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:src="@drawable/flash"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.16"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.01999998" />

  <ImageView
      android:id="@+id/btn_speed"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:src="@drawable/ic_speed"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.28"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.01999998" />

  <ImageView
      android:id="@+id/timer"
      android:layout_width="30dp"
      android:layout_height="30dp"
      android:src="@drawable/timer"
      android:elevation="2dp"
      android:layout_marginRight="25dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.05"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.01999998" />


<!--  <ImageView-->
<!--      android:id="@+id/photo_filter"-->
<!--      android:layout_width="30dp"-->
<!--      android:layout_height="30dp"-->
<!--      android:src="@drawable/photo_filter"-->
