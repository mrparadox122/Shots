<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
  android:background="@color/black"
    android:keepScreenOn="true"
    android:layout_height="match_parent">


  <com.paradox.projectsp3.VideoEditorFolder.widget.PortraitFrameLayout
      android:id="@+id/wrap_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0">

  </com.paradox.projectsp3.VideoEditorFolder.widget.PortraitFrameLayout>

  <LinearLayout
      android:visibility="gone"
      android:id="@+id/timerlayout"
      android:layout_width="228dp"
      android:layout_height="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.82"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.82">


    <TextView
        android:id="@+id/time15s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15s"

        android:textColor="@color/teal_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.16000003" />

    <TextView
        android:id="@+id/time30s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="30s"
        android:textColor="@color/teal_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.26999998" />


    <TextView
        android:id="@+id/time60s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:text="60s"
        android:textColor="@color/teal_700"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_flash"
        app:layout_constraintStart_toStartOf="@+id/btn_flash"
        app:layout_constraintTop_toTopOf="@+id/btn_flash"
        app:layout_constraintVertical_bias="0.37" />


  </LinearLayout>


  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="44dp"
      android:layout_height="47dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.26"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0"
      app:srcCompat="@drawable/face"
      app:tint="#FFEB3B" />

  <ImageView
      android:id="@+id/gallery"
      android:layout_width="37dp"
      android:layout_height="30dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.88"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.110000014"
      app:srcCompat="@drawable/magic"
      tools:ignore="VectorDrawableCompat" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="54dp"
      android:layout_height="52dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.87"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"

      app:layout_constraintVertical_bias="1.0" />

  <!--     app:srcCompat="@drawable/ic_launcher_foreground"   -->

  <ImageView
      android:id="@+id/btn_flash"
      android:layout_width="44dp"
      android:layout_height="38dp"

      android:src="@drawable/flash"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.25" />

  <ImageView
      android:id="@+id/timer"
      android:layout_width="44dp"
      android:layout_height="38dp"

      android:src="@drawable/timer"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.9"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.35000002" />

  <ImageView
      android:id="@+id/btn_switch_camera"
      android:layout_width="30dp"
      android:layout_height="34dp"
      android:layout_marginTop="5dp"
      android:src="@drawable/cameraclip"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.88"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.17000002" />

  <TextView
      android:id="@+id/button"
      android:layout_width="153dp"
      android:layout_height="50dp"
      android:layout_marginTop="16dp"
      android:textAllCaps="false"
      android:drawableLeft="@drawable/music"
      android:text=" Add sound"
      android:textColor="#fff"
      android:gravity="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <ImageView
      android:id="@+id/record"
      android:layout_width="67dp"
      android:layout_marginTop="5dp"
      android:layout_height="63dp"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
      android:src="@drawable/pause"

      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.55"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

  <ImageView
      android:id="@+id/pause"
      android:layout_width="67dp"
      android:visibility="gone"
      android:layout_height="63dp"
      android:layout_alignParentBottom="true"
      android:layout_centerInParent="true"
      android:src="@drawable/recording_video"


      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.55"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

  <ListView
      android:id="@+id/filter_list"
      android:layout_width="123dp"
      android:layout_height="match_parent"

      android:layout_marginTop="64dp"
      android:layout_marginBottom="100dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="@+id/wrap_view"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>