<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_65"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:id="@+id/skip_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="Skip"
        android:layout_gravity="end"
        android:gravity="end"
        android:textSize="18dp"
        android:textStyle="bold"
        android:paddingEnd="15dp"
        android:textColor="@color/red"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/shorts_s"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mobile_button"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile"/>


            <Button
                android:id="@+id/email_button"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:padding="10dp">



            <LinearLayout
                android:id="@+id/ll_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.hbb20.CountryCodePicker
                    app:ccp_arrowColor="@color/white"
                    app:ccp_contentColor="@color/white"
                    android:id="@+id/countryCode_picker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <EditText
                    android:id="@+id/et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/signuptext_bg"
                    android:fontFamily="@font/calibri"
                    android:hint="Enter MobileNumber"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:padding="10dp"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

            </LinearLayout>


            <EditText
                android:visibility="gone"
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/signuptext_bg"
                android:fontFamily="@font/calibri"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_pin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/signuptext_bg"
                android:fontFamily="@font/calibri"
                android:hint="Enter 4- 10 digits Pin"
                android:inputType="numberPassword"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:textColor="#000000"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:padding="5dp">

               <CheckBox
                   android:id="@+id/check_remember"
                   android:layout_width="wrap_content"
                   android:layout_height="25dp"
                   android:text="Remember"
                   android:checked="false"
                   android:paddingRight="10dp"
                   android:background="@color/white"
                   android:textColor="@color/black"
                   android:textStyle="bold"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center|end"
                    android:gravity="center|end"
                    android:padding="3dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/white"
                    android:fontFamily="@font/gotham"
                    android:onClick="foegot_pass"
                    android:text="@string/forgot"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="RtlCompat" />

            </RelativeLayout>


            <Button
                android:id="@+id/login_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTintMode="src_over"
                android:backgroundTint="@color/white"
                android:background="@drawable/buttonshape"
                android:fontFamily="@font/gotham"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/createnewACC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create New Account"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:elevation="2dp"/>


            <TextView
                android:visibility="gone"
                android:id="@+id/firebase_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firebase Login"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:onClick="firebaselogin"
               android:backgroundTintMode="src_over"
                android:backgroundTint="@color/white"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:elevation="2dp"/>


        </LinearLayout>

    </LinearLayout>







</LinearLayout>
