<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Edit Email"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:fontFamily="@font/droidserif"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/editeamil_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="enter new email"
            android:maxLines="1"
            android:fontFamily="@font/droidserif"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/gray"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_saveemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:fontFamily="@font/droid_bold"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/ll_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical">

            <EditText
                android:id="@+id/verifycode_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="enter verification code"
                android:maxLines="1"
                android:maxLength="6"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/gray"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_verifyemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>